<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".SettingFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleTextView"
        style="@style/TitleTextStyle"
        android:text="@string/setting"
        android:layout_centerHorizontal="true"
    />

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/general_item_background">

        <Switch
            android:id="@+id/switch1"
            style="@style/Switch"
            android:text="@string/music"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:text="@string/volume_control"
            style="@style/TitleTextView" />

        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:progress="40" />

        <TextView
            style="@style/TitleTextView"
            android:text="@string/current_date_and_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/current_date"
            style="@style/DateTimeTextView"
            android:text="@string/current_date"/>

        <TextView
            android:id="@+id/current_time"
            style="@style/DateTimeTextView"
            android:text="@string/current_time"/>

        </LinearLayout>

        <Switch
            android:id="@+id/notificationSwitch"
            style="@style/Switch"
            android:text="@string/set_the_notification"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:timePickerMode="spinner" />

        <Button
            android:id="@+id/setNotificationButton"
            style="@style/Button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="@string/button_notification" />


    </LinearLayout>

</RelativeLayout>
