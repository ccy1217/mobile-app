<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coursework" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="MenuItemTextStyle">
        <item name="android:textColor">@color/navy</item>
    </style>

    <!-- Main Title -->
    <style name="TitleTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>


    <!-- searching box-->
    <style name="SearchViewTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:background">@drawable/general_item_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="searchIcon">@drawable/search</item>
        <item name="closeIcon">@drawable/cancel</item>
    </style>

    <!--General edit text-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/general_item_background</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Password -->
    <style name="PasswordLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:hint">@null</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="boxBackgroundMode">none</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="PasswordEditText"
        parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/general_item_background</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Switch-->
    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Subtitle Setting Fragment and Customised Quiz Fragment -->
    <style name="Subtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <!-- Date and Time text -->
    <style name="DateTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Linear Layout of Spinner -->
    <style name="SpinnerLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/general_item_background</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Theme.Coursework" parent="Base.Theme.Coursework" />
</resources>
